# 包含核心文件
include README.md
include LICENSE
include requirements.txt
include .env.example

# 包含配置和模板
recursive-include configs *.json
recursive-include templates *.yaml

# 包含示例
include example.py
include simple_cli.py

# 排除不必要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude test_*
global-exclude *_test.py
global-exclude *.log
