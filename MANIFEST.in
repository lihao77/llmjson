# 包含README和许可证文件
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# 包含配置文件
include *.json
include *.yaml
include *.yml

# 包含文档文件
recursive-include docs *
recursive-include llm_json_generator *.md
recursive-include llm_json_generator *.txt
recursive-include llm_json_generator *.json

# 排除不需要的文件
exclude *.pyc
exclude *.pyo
exclude *~
exclude .DS_Store
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *~
recursive-exclude * .DS_Store

# 排除测试文件
exclude tests/*
recursive-exclude tests *

# 排除开发文件
exclude .gitignore
exclude .pytest_cache
exclude .mypy_cache
exclude .coverage
exclude tox.ini